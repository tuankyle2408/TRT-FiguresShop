<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_perm_media_24"
            android:scaleType="centerCrop"
            android:id="@+id/item_gio_hang_hinh"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/item_gio_hang_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên "/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="7"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:id="@+id/item_gio_hang_gia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="giá "/>
                <ImageView
                    android:id="@+id/item_gio_hang_xoa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_remove_24"
                    />
                <TextView
                    android:id="@+id/item_gio_hang_so_luong"
                    android:layout_width="0dp"
                    android:text="1"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/item_gio_hang_them"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"/>
                <TextView
                    android:id="@+id/item_gio_hang_gia_tong"
                    android:text="000,000,000 đ"
                    android:textSize="15sp"
                    android:gravity="center|center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        
</androidx.cardview.widget.CardView>